<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.16"/>
  <object class="GtkApplicationWindow" id="window">
    <property name="can_focus">True</property>
    <property name="title" translatable="yes">Nerust</property>
    <property name="default_width">500</property>
    <property name="default_height">400</property>
    <property name="window_position">center</property>
    <child>
      <placeholder/>
    </child>
    <child>
      <object class="GtkGLArea" id="glarea">
        <property name="visible">True</property>
        <property name="app_paintable">True</property>
        <property name="can_focus">False</property>
      </object>
    </child>
  </object>
  <menu id="menu">
    <submenu>
      <attribute name="label" translatable="yes">_File</attribute>
      <!-- <attribute name="icon">gtk-file</attribute> -->
      <section>
        <item>
          <attribute name="label" translatable="yes">_Open</attribute>
          <attribute name="icon">gtk-open</attribute>
          <attribute name="action">win.open</attribute>
        </item>
        <item>
          <attribute name="label" translatable="yes">_Info</attribute>
          <attribute name="icon">gtk-info</attribute>
          <attribute name="action">win.info</attribute>
        </item>
      </section>
      <section>
        <item>
          <attribute name="label" translatable="yes">_Quit</attribute>
          <attribute name="icon">gtk-quit</attribute>
          <attribute name="action">app.quit</attribute>
        </item>
      </section>
    </submenu>
    <submenu>
      <attribute name="label" translatable="yes">_Edit</attribute>
      <!-- <attribute name="icon">gtk-edit</attribute> -->
      <section>
        <item>
          <attribute name="label" translatable="yes">_Resume</attribute>
          <attribute name="icon">gtk-media-play</attribute>
          <attribute name="action">app.resume</attribute>
        </item>
        <item>
          <attribute name="label" translatable="yes">_Pause</attribute>
          <attribute name="icon">gtk-media-pause</attribute>
          <attribute name="action">app.pause</attribute>
        </item>
      </section>
      <section>
        <item>
          <attribute name="label" translatable="yes">Save state</attribute>
          <attribute name="action">app.savestate</attribute>
        </item>
        <item>
          <attribute name="label" translatable="yes">Load state</attribute>
          <attribute name="action">app.loadstate</attribute>
        </item>
        <submenu>
          <attribute name='label' translatable='yes'>Choise state</attribute>
          <section>
            <item>
              <attribute name='label' translatable='yes'>State 1</attribute>
              <attribute name='action'>app.choicestate</attribute>
              <attribute name='target' type='i'>1</attribute>
            </item>
            <item>
              <attribute name='label' translatable='yes'>State 2</attribute>
              <attribute name='action'>app.choicestate</attribute>
              <attribute name='target' type='i'>2</attribute>
            </item>
            <item>
              <attribute name='label' translatable='yes'>State 3</attribute>
              <attribute name='action'>app.choicestate</attribute>
              <attribute name='target' type='i'>3</attribute>
            </item>
            <item>
              <attribute name='label' translatable='yes'>State 4</attribute>
              <attribute name='action'>app.choicestate</attribute>
              <attribute name='target' type='i'>4</attribute>
            </item>
            <item>
              <attribute name='label' translatable='yes'>State 5</attribute>
              <attribute name='action'>app.choicestate</attribute>
              <attribute name='target' type='i'>5</attribute>
            </item>
            <item>
              <attribute name='label' translatable='yes'>State 6</attribute>
              <attribute name='action'>app.choicestate</attribute>
              <attribute name='target' type='i'>6</attribute>
            </item>
            <item>
              <attribute name='label' translatable='yes'>State 7</attribute>
              <attribute name='action'>app.choicestate</attribute>
              <attribute name='target' type='i'>7</attribute>
            </item>
            <item>
              <attribute name='label' translatable='yes'>State 8</attribute>
              <attribute name='action'>app.choicestate</attribute>
              <attribute name='target' type='i'>8</attribute>
            </item>
            <item>
              <attribute name='label' translatable='yes'>State 9</attribute>
              <attribute name='action'>app.choicestate</attribute>
              <attribute name='target' type='i'>9</attribute>
            </item>
          </section>
        </submenu>
      </section>
      <section>
        <item>
          <attribute name="label" translatable="yes">Preferences</attribute>
          <attribute name="icon">gtk-preferences</attribute>
          <attribute name="action">app.preferences</attribute>
        </item>
      </section>
    </submenu>
    <submenu>
      <attribute name='label' translatable='yes'>_Help</attribute>
      <section>
        <item>
          <attribute name='label' translatable='yes'>_About</attribute>
          <attribute name='action'>app.about</attribute>
        </item>
      </section>
    </submenu>
  </menu>
</interface>
